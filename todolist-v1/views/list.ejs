<%- include('header') -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (var i = 0; i < addListItems.length; i++){ %>
  <div class="item">
    <input type="checkbox">
    <p><%= addListItems[i] %></p>
  </div>
  <% } %>
  <form action="/" method="post">
    <input type="text" name="newItem" placeholder="Add item" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('footer') -%>
